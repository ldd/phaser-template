{
  "parser": "babel-eslint",
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["babel", "import", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "globals": {
    "__DEV__": true
  },
  "rules": {
    "babel/semi": 1,
    "default-case": 1,
    "import/extensions": 1,
    "import/no-unresolved": 1,
    "import/prefer-default-export": 0,
    "no-continue": 1,
    "no-param-reassign": [
      2,
      {
        "props": false
      }
    ],
    "no-return-assign": 1,
    "no-unused-vars": 1,
    "no-use-before-define": 1,
    "prettier/prettier": 2,
    "quotes": [2, "double"]
  }
}
